<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.graduate.zhpan.littlebird">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 从sdcard中读取数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".app.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="gX3U5BFQkLTSHfiIrP2Bvnai9DvFd8IY" />
        //key:开发者申请的Key
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SplashActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SignActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.TaskActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.CheckActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.CheckTaskActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.RankActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.ProjectActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.NoticeActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.EditTaskActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.SettingActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".activity.UserInfoActivity" />
        <activity android:name=".activity.IntegralActivity" />
        <activity android:name=".activity.EncourageActivity" />
        <activity android:name=".activity.ModifyPswActivity" />
        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.LeaveListActivity" />
        <activity android:name=".activity.QuerySalaryActivity" />
        <activity android:name=".activity.WriteTopicActivity" />
        <activity android:name=".activity.LeaveActivity" />
        <activity android:name=".activity.HistoryTaskActivity" />
        <activity android:name=".activity.GradeActivity"></activity>
    </application>

</manifest>