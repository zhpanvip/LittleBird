<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ll_main_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey_ee"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_main_homepage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_homepage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/index_icon_home_current"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_main_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="@color/blue" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_main_colleague"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_colleague"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/index_icon_colleague"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_main_colleague"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同事"
                    android:textColor="@color/grey_66" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_main_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:textColor="@color/grey_66">

                <ImageView
                    android:id="@+id/iv_main_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_open" />

                <TextView
                    android:id="@+id/tv_main_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同事"
                    android:textColor="@color/grey_66"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_topic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_topic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/index_icon_message"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_main_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="话题"
                    android:textColor="@color/grey_66" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_me"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/index_icon_about"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_main_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我"
                    android:textColor="@color/grey_66" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/pop_main"/>

</FrameLayout>
