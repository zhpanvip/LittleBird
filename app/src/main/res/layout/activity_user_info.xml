<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_home_avatar"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关羽"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey_33"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/iv_head_pic"/>
        <LinearLayout
            android:id="@+id/ll_grade"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/iv_head_pic"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前等级"
            android:textSize="14sp"
            android:textColor="@color/grey_33"/>
            <ImageView
                android:id="@+id/iv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/me_grade_three"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前积分41分"
            android:layout_below="@id/ll_grade"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/grey_33"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_head_pic"/>
    </RelativeLayout>

    <include layout="@layout/item_base_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/left_text_padding_top_bottom_right_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="电话" />

        <TextView
            android:id="@+id/tv_tel_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="15515269670"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/item_base_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/left_text_padding_top_bottom_right_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="邮箱" />

        <TextView
            android:id="@+id/tv_e_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="zhpanvip@outlook.com"
            android:textSize="16sp" />
    </RelativeLayout>
    <include layout="@layout/item_base_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/left_text_padding_top_bottom_right_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="职务" />

        <TextView
            android:id="@+id/tv_duties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="Android开工程出师"
            android:textSize="16sp" />
    </RelativeLayout>
    <include layout="@layout/item_base_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/left_text_padding_top_bottom_right_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="入职时间" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="2016年12月18日"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/item_base_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/left_text_padding_top_bottom_right_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="所在项目组" />

        <TextView
            android:id="@+id/tv_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="证通信息技术公司"
            android:textSize="16sp" />
    </RelativeLayout>
    <include layout="@layout/item_base_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/left_text_padding_top_bottom_right_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="部门" />

        <TextView
            android:id="@+id/tv_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="上海软件中心"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
