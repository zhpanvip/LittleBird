<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/ll_day"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"/>
            <View
                android:id="@+id/view_day"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/grey_33"/>
            <View
                android:id="@+id/view_week"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_99"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/grey_33"/>
            <View
                android:id="@+id/view_month"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_99"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_quarter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_quarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季度"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/grey_33"/>
            <View
                android:id="@+id/view_quarter"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_99"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/grey_33"/>
            <View
                android:id="@+id/view_year"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_99"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
